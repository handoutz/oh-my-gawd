var grunt = require('grunt');
/**
 *
 * @param {grunt} grunt
 */
module.exports = function (grunt) {
    grunt.initConfig({
        less: {
            development: {
                options: {
                    paths: ["./public/css"]
                },
                files: {
                    "./public/css/oauth_dialog.css": "./public/css/oauth_dialog.less",
                    "./public/css/custom_style.css": "./public/css/custom_style.less"
                }
            }
        },
        watch: {
            files: "./public/css/*.less",
            tasks: ["less"]
        },
        run: {
            chat: {
                cmd: 'nodemon.cmd',
                args: [
                    '.\\chatsrv.js'
                ]
            },
            srv: {
                cmd: 'nodemon.cmd',
                args: [
                    '.\\cluster.js'
                ]
            }
        }
    });
    grunt.loadNpmTasks('grunt-run');
    grunt.loadNpmTasks('grunt-contrib-less');
    grunt.loadNpmTasks('grunt-contrib-watch');
};